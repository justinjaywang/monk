<% if (page.total > 1){ %>
<nav class="nav nav--pagination">
  <ul class="nav-list">
    <li class="nav-item">
      <% if (page.prev){ %>
      <a href="<%- config.root %><%- page.prev_link %>" class="nav-link"><%= __('previous') %></a>
      <% } %>
    </li>
    <li class="nav-item nav-item--empty"><%= page.current %> of <%= page.total %></li>
    <li class="nav-item">
      <% if (page.next){ %>
      <a href="<%- config.root %><%- page.next_link %>" class="nav-link"><%= __('next') %></a>
      <% } %>
    </li>
  </ul>
</nav>
<% } %>
